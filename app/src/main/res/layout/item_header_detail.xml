<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alignmentMode="alignBounds"
    android:background="@android:color/transparent"
    android:clipToPadding="false"
    android:columnCount="3"
    android:rowCount="7"
    android:transitionGroup="false"
    android:useDefaultMargins="false">
    <!-- transparent background needed for the ripple on the spacer -->

    <!-- spacer for the image -->
    <org.huxizhijian.simplerecipebook.widget.FourThreeImageView
        android:id="@+id/shot_spacer"
        android:layout_columnSpan="3"
        android:background="@drawable/mid_grey_bounded_ripple"/>

    <include layout="@layout/item_header_description"/>

    <Space
        android:layout_height="@dimen/padding_normal"
        android:layout_columnSpan="3"/>

</GridLayout>