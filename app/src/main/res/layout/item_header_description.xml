<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shot_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_large"
        android:background="@color/light_grey"
        android:gravity="start"
        android:paddingBottom="@dimen/padding_normal"
        android:paddingEnd="@dimen/padding_room_for_fab"
        android:paddingStart="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_normal"
        android:textSize="@dimen/large_text_size"
        android:transitionName="@string/transition_shot_title"
        tools:text="Dribbble shot title"/>

    <me.gujun.android.taggroup.TagGroup
        android:id="@+id/tag_group"
        style="@style/TagGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal"
        app:atg_borderColor="@color/colorPrimary"
        app:atg_textColor="@color/colorPrimary"
        app:atg_textSize="15sp"
        app:atg_verticalSpacing="4dp"
        app:paddingEnd="4dp"
        app:paddingStart="4dp"/>

    <TextView
        android:id="@+id/shot_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"/>

    <TextView
        android:id="@+id/shot_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal"/>

</LinearLayout>
